<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <size android:width="42dp" android:height="15dp" />
            <solid android:color="@color/light_grey_2_weather" />
            <corners android:radius="100sp" />
            <stroke android:width="1dp" android:color="#8e8e8e" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_yellow_weather" />
            <corners android:radius="24sp" />
        </shape>
    </item>

</selector>