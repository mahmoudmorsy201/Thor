<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dateForWeekDaysTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tue, 13 May"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconForWeekDaysImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/dateForWeekDaysTextView"
        app:layout_constraintTop_toTopOf="@+id/dateForWeekDaysTextView"
        android:src="@drawable/ic_baseline_favorite_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iconForWeekDaysImageView"
        app:layout_constraintTop_toTopOf="@+id/iconForWeekDaysImageView"
        android:text="35Â°"/>

</androidx.constraintlayout.widget.ConstraintLayout>